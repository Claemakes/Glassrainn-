# GlassRain Environment Configuration

# Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/glassrain
PGDATABASE=glassrain
PGHOST=localhost
PGPASSWORD=your_password
PGPORT=5432
PGUSER=postgres

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
MAPBOX_API_KEY=pk.your-mapbox-api-key-here

# Application Settings
FLASK_ENV=development  # Set to 'production' for deployment
FLASK_APP=run.py
DEBUG=True  # Set to False for production
SECRET_KEY=your-secret-key-for-flask-sessions

# Server Settings
PORT=3000
HOST=0.0.0.0  # Use 0.0.0.0 to make accessible externally

# Feature Flags
ENABLE_3D_VISUALIZATION=True
ENABLE_AI_CHAT=True
ENABLE_WEATHER_API=True
ENABLE_SERVICE_BOOKING=True